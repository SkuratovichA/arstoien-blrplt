{
  "name": "arstoien-boilerplate",
  "version": "1.0.0",
  "description": "Production-ready boilerplate for full-stack applications",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "concurrently -n server,client,admin -c cyan,magenta,yellow \"pnpm --filter @blrplt/server dev\" \"pnpm --filter @blrplt/client dev\" \"pnpm --filter @blrplt/admin dev\"",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint:check": "pnpm -r run lint:check",
    "lint:fix": "pnpm -r run lint:fix",
    "prettier:check": "pnpm -r run prettier:check",
    "prettier:fix": "pnpm -r run prettier:fix",
    "typecheck": "pnpm -r run typecheck",
    "db:generate": "pnpm --filter @blrplt/server db:generate",
    "db:migrate": "pnpm --filter @blrplt/server db:migrate",
    "db:migrate:prod": "pnpm --filter @blrplt/server db:migrate:prod",
    "db:push": "pnpm --filter @blrplt/server db:push",
    "db:seed": "pnpm --filter @blrplt/server db:seed",
    "db:studio": "pnpm --filter @blrplt/server db:studio",
    "codegen": "pnpm -r run codegen",
    "i18n": "pnpm -r run i18n"
  },
  "devDependencies": {
    "@arstoien/devtools": "^1.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "typescript": "^5.3.3"
  }
}
