# =============================================================================
# Production Environment Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!

aws_region = "us-east-1"

# Database credentials
db_username = "blrplt_admin"
db_password = "your-secure-database-password"

# JWT secrets (generate with: openssl rand -base64 32)
jwt_secret         = "your-jwt-secret-here"
jwt_refresh_secret = "your-jwt-refresh-secret-here"

# Domain configuration (optional)
domain_name               = "example.com"
client_domain_aliases     = ["example.com", "www.example.com"]
admin_domain_aliases      = ["admin.example.com"]
acm_certificate_arn       = "arn:aws:acm:us-east-1:123456789:certificate/abc123"
cloudfront_certificate_arn = "arn:aws:acm:us-east-1:123456789:certificate/abc123"
create_route53_records    = true
